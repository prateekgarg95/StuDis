<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/backdrop_blue"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/name_nav"
        android:layout_above="@+id/email_nav"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:layout_alignParentStart="true"
        android:background="@color/classroom_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_nav"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/classroom_blue"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/name_nav"
        android:layout_alignStart="@+id/name_nav"
        android:textStyle="bold"/>

</RelativeLayout>